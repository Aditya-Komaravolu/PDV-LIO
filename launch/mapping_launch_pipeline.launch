<launch>
    <!-- Launch file for velodyne16 VLP-16 LiDAR -->

    <arg name="rviz" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="config_file_path"/>
    <arg name="base_path"/>


    <rosparam command="load" file="$(arg  config_file_path)"/>
    <param name="base_path" type="string" value="$(arg base_path)" />

    
    
    <node pkg="pv_lio" type="pv_lio_node" name="pv_lio_node" output="screen" required="true" />
    
    

    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz"
              args="-d $(find pv_lio)/config/rviz_cfg/voxel_mapping.rviz"/>
    </group>

</launch>
